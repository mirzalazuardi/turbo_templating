<p style="color: green"><%= notice %></p>
<p style="color: red"><%= alert %></p>

<h1 class="<%= form_subtitle_classes %>" > Sign in</h1>

<%= form_with(url: sign_in_path, class: form_group_classes) do |form| %>
  <div class="mb-4">
    <%= form.label :email, class: label_classes %>
    <%= form.email_field :email, value: params[:email_hint], required: true, autofocus: true, autocomplete: "email",
        class: form_input_classes %>
  </div>

  <div class="mb-4">
    <%= form.label :password, class: label_classes   %>
    <%= form.password_field :password, required: true, autocomplete: "current-password", class: form_input_classes %>
  </div>

  <div class="mb-4">
    <%= form.submit "Sign in", class: submit_button_classes %>
  </div>
<% end %>

<div class="mb-4">
  <%= link_to "Sign in with Google", "/auth/google_oauth2", class: button_color_classes(:red) %>
</div>
<div class="mb-4">
  <%= link_to "Sign in with Facebook", "/auth/facebook", class: button_color_classes(:blue) %>
</div>
<div class="mb-4">
  <%= link_to "Sign in with X", "/auth/twitter", class: button_color_classes(:black) %>
</div>
<div class="mb-4">
  <%= link_to "Sign in with LinkedIn", "/auth/linkedin", class: button_color_classes(:navy) %>
</div>

<br>

<div>
  <%= link_to "Sign up", sign_up_path, class: "bg-blue-500 hover:bg-blue-700 text-white font-bold py-2 px-4 rounded" %> |
  <%= link_to "Forgot your password?", new_identity_password_reset_path, class: "bg-blue-500 hover:bg-blue-700 text-white font-bold py-2 px-4 rounded" %>
</div>
