<% user.errors.full_messages.each do |message| %>
  <div class="bg-red-100 border border-red-400 text-red-700 px-4 py-3 rounded relative mb-4" role="alert">
    <span class="block sm:inline"><%= message %></span>
  </div>
<% end %>
<%= form_with(model: user, data: { turbo: true, turbo_frame: "users_list" }) do |f| %>
  <div class="mb-4">
    <%= f.label :email, class: "block text-sm font-medium text-gray-700" %>
    <%= f.email_field :email, class: "shadow-sm focus:ring-blue-500 focus:border-blue-500 block w-full sm:text-sm border-gray-300 rounded-md" %>
  </div>
  <%= f.submit "save", class: button_color_classes(:blue)  %>
<% end %>
