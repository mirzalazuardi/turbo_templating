<h1 class="text-2xl font-bold mb-4">Users</h1>
<%= link_to "New User", new_user_path, data: { turbo_frame: "modal" }, class: "mb-4 inline-block px-4 py-2 bg-green-600 text-white rounded" %>
<%= turbo_frame_tag "users_list" do %>
  <%= render SmartTableComponent.new(
    columns: [:email],
    records: @records,
    pagy: @pagy,
    ransack: @ransack,
    result_frame_id: "users_list"
  ) %>
<% end %>
<turbo-frame id="modal"></turbo-frame>
